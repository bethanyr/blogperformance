<h1>Ivan the Terrible's Blog</h1>

<section class="blog">
<% @posts.each do |post| %>
  <section class="post">
    <h2><%= post.title %></h2>
    <div><%= post.body %></div>
    <div class="post_nav">
      <%= link_to 'Show', post %> |
      <%= link_to 'Edit', edit_post_path(post) %> |
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      <%=link_to 'View comments and replies', post%>
    </div>
  </section>
  <% end %>
</section>

<br />

<%= link_to 'New Post', new_post_path %>
