<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

 <div class="comment">
      <h2>Comments</h2>
      <% @post.comments.each do |c| %>
        <p>Comment: <%= c.body %></p>
        <% c.replies.each do |reply|%>
           <p>Reply:<%= reply.body%></p>
        <%end%>
      <% end %>

    </div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
